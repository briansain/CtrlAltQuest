@inherits CharacterSheetIndex

<MudItem xs="12" sm="6">
    <MudButton Variant="Variant.Text" 
        StartIcon="@(_savingThrowsExpanded ? Icons.Material.Filled.KeyboardArrowDown : @Icons.Material.Filled.KeyboardArrowRight)"
        OnClick="@(_ => _savingThrowsExpanded = !_savingThrowsExpanded)">Saving Throws</MudButton>
    <MudCollapse Expanded="_savingThrowsExpanded">
        <MudGrid>
            <MudItem xs="4">
                <MudText Typo="Typo.overline">Fortitude</MudText>
                <Proficiency_SVG Value="_state.FortitudeSavingThrowProficiency" />
                <MudText Typo="Typo.h5">@_state.FortitudeSavingThrow</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.overline">Reflex</MudText>
                <Proficiency_SVG Value="_state.ReflexSavingThrowProficiency" />
                <MudText Typo="Typo.h5">@_state.ReflexSavingThrow</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
            <MudItem xs="4">
                <MudText Typo="Typo.overline">Will</MudText>
                <Proficiency_SVG Value="_state.WillSavingThrowProficiency" />
                <MudText Typo="Typo.h5">@_state.WillSavingThrow</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
        </MudGrid>
    </MudCollapse>
</MudItem>

