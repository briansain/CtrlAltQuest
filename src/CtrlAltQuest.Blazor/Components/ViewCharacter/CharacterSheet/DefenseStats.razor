@inherits CharacterSheetIndex

<MudItem xs="12" sm="6">
    <MudButton Variant="Variant.Text" 
        StartIcon="@(_savingThrowsExpanded ? Icons.Material.Filled.KeyboardArrowDown : @Icons.Material.Filled.KeyboardArrowRight)"
        OnClick="@(_ => _savingThrowsExpanded = !_savingThrowsExpanded)">Saving Throws</MudButton>
    <MudCollapse Expanded="_savingThrowsExpanded">
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.overline">Fortitude</MudText>
                <MudText Typo="Typo.h5">T</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.overline">Reflex</MudText>
                <MudText Typo="Typo.h5">T</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.overline">Will</MudText>
                <MudText Typo="Typo.h5">T</MudText>
                <!-- tooltip shows calculation -->
            </MudItem>
        </MudGrid>
    </MudCollapse>
</MudItem>
<MudItem xs="12" sm="6">
    <MudButton Variant="Variant.Text" 
        StartIcon="@(_armorProficiency ? Icons.Material.Filled.KeyboardArrowDown : @Icons.Material.Filled.KeyboardArrowRight)"
        OnClick="@(_ => _armorProficiency = !_armorProficiency)">Armor Proficiency</MudButton>
    <MudCollapse Expanded="_armorProficiency">
        <MudGrid>
            <MudItem xs="6">
                <MudText Typo="Typo.overline" Class="svg-stat-heading">Unarmored</MudText>
                <Proficiency_SVG Value="_state.UnarmoredProficiency" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.overline" Class="svg-stat-heading">Light</MudText>
                <Proficiency_SVG Value="_state.LightArmorProficiency" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.overline" Class="svg-stat-heading">Medium</MudText>
                <Proficiency_SVG Value="_state.MediumArmorProficiency" />
            </MudItem>
            <MudItem xs="6">
                <MudText Typo="Typo.overline" Class="svg-stat-heading">Heavy</MudText>
                <Proficiency_SVG Value="_state.HeavyArmorProficiency" />
            </MudItem>
        </MudGrid>
    </MudCollapse>
</MudItem>
<MudItem xs="12">
    <MudText Typo="Typo.overline">Defenses Notes</MudText>
    <MudText Typo="Typo.h5">n/a</MudText>
</MudItem>
@code {
    private bool _armorProficiency = true;

    private bool _savingThrowsExpanded = true;
}