        <MudText Class="svg-stat-heading" Typo="Typo.overline">Fortitude</MudText>
        <InnieSquare_SVG Value="@SavingThrowHelper.GetFortitudeSavingThrow(_state)" />
    </MudItem>
    <MudItem xs="6" sm="4">
        <MudText Class="svg-stat-heading" Typo="Typo.overline">Reflex</MudText>
        <InnieSquare_SVG Value="@SavingThrowHelper.GetReflexSavingThrow(_state)" />
    </MudItem>
    <MudItem xs="6" sm="4">
        <MudText Class="svg-stat-heading" Typo="Typo.overline">Will</MudText>
        <InnieSquare_SVG Value="@SavingThrowHelper.GetWillSavingThrow(_state)" />
    </MudItem>
</MudGrid>
