@inherits CharacterSheetIndex;

<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Strength</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Strength)</MudText>
</MudItem>
<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Dexterity</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Dexterity)</MudText>
</MudItem>
<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Constitution</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Constitution)</MudText>
</MudItem>
<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Intelligence</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Intelligence)</MudText>
</MudItem>
<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Wisdom</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Wisdom)</MudText>
</MudItem>
<MudItem xs="4" sm="2" class="d-flex flex-column align-center">
    <MudText Typo="Typo.overline">Charisma</MudText>
    <MudText Typo="Typo.h5" class="stat-block">@GetModifier(_state.Charisma)</MudText>
</MudItem>

@code {
    private string GetModifier(int attributeModifier)
    {
        return $"{(_state.Strength >= 0 ? "+" : "-")} {attributeModifier}";
    }
}